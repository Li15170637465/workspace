{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-std=c11",
                "-I${workspaceFolder}\\include",
                "${workspaceFolder}\\src\\main.c",
                "${workspaceFolder}\\src\\network.c",
                "-o",
                "${workspaceFolder}\\bin\\main.exe",
                "-fexec-charset=GBK",
                "-static-libgcc",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "D:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-fexec-charset=GBK"
            ],
            "options": {
                "cwd": "D:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
        {
            "label": "smart-commit-push",
            "type": "shell",
            "command": "git add . && git commit -m \"自动提交: $(date +'%Y-%m-%d %H:%M')\" && git push origin main",
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "git add . && git commit -m \"自动提交: %date:~0,4%-%date:~5,2%-%date:~8,2% %time:~0,2%:%time:~3,2%\" && git push origin main"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}